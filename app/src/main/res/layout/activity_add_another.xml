<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:weightSum="1"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="New Item"
        android:textStyle="bold"
        android:textColor="@color/colorText"
        android:textSize="10pt"
        android:textAlignment="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Item Name: "
            android:textSize="23dp"
            android:layout_weight="10"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/itemNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:text=""
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="10"
            android:text="Amount: "
            android:textSize="23dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/itemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text=""
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="100">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            android:text="Assignee: "
            android:textSize="23dp" />

        <EditText
        android:id="@+id/assignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:text=""
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:orientation="horizontal"
    android:weightSum="100">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_weight="10"
        android:text="Category: "
        android:textSize="23dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:text=""
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>


    <Button
        android:id="@+id/saveItem"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="250dp"
        android:text="Save Item"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Commonly Added Items"
            android:textAlignment="center"
            android:layout_weight="7"
            android:textSize="10pt"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="100">
        <TextView
            android:id="@+id/item1"
            android:layout_width="221dp"
            android:layout_height="match_parent"
            android:text="Item 1"
            android:textSize="10pt"
            android:layout_weight="77.91" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/saveItem1"
            android:text="+"
            android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/item2"
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:text="Item 2"
                android:textSize="10pt"
                android:layout_weight="77.91" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/saveItem2"
                android:text="+"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/item3"
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:text="Item 3"
                android:textSize="10pt"
                android:layout_weight="77.91" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/saveItem3"
                android:text="+"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/item4"
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:text="Item 4"
                android:textSize="10pt"
                android:layout_weight="77.91" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/saveItem4"
                android:text="+"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/item5"
                android:layout_width="221dp"
                android:layout_height="match_parent"
                android:text="Item 5"
                android:textSize="10pt"
                android:layout_weight="77.91" />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/saveItem5"
                android:text="+"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>