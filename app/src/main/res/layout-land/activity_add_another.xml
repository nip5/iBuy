<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:background="@color/colorPrimary"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="50">

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:text="Item Name: "
                android:textSize="23dp" />

            <EditText
                android:id="@+id/itemNameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="71.38"
                android:text=""
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:text="Amount: "
                android:textSize="23dp" />

            <EditText
                android:id="@+id/itemAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="50"
                android:text=""
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:text="Assignee: "
                android:textSize="23dp" />

            <EditText
                android:id="@+id/assignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="70.95"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="306dp"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:text="Category: "
                android:textSize="23dp" />

            <EditText
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="68.77"
                android:text=""
                android:textSize="15dp" />
        </LinearLayout>


        <Button
            android:id="@+id/saveItem"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Save Item"
            android:backgroundTint="@color/colorAccent"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="304dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="50"
            android:weightSum="100">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Commonly Added Items"
                android:textAlignment="center"
                android:textSize="10pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_weight="77.91"
                    android:text="Item 1"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/saveItem1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_weight="77.91"
                    android:text="Item 2"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/saveItem2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/item3"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_weight="77.91"
                    android:text="Item 3"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/saveItem3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/item4"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_weight="77.91"
                    android:text="Item 4"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/saveItem4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <TextView
                    android:id="@+id/item5"
                    android:layout_width="221dp"
                    android:layout_height="match_parent"
                    android:layout_weight="77.91"
                    android:text="Item 5"
                    android:textSize="10pt" />

                <Button
                    android:id="@+id/saveItem5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>