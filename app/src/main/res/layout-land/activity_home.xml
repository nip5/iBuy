<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nathan_mccauslin.ibuy.HomeActivity"
    android:background="@color/colorPrimary"
    android:weightSum="100">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="iBuy Homepage"
        android:textColor="@color/colorText"
        android:textSize="32dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="My List"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"
        android:id="@+id/myListButton"
        android:layout_weight="13.87"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/purchaseAnalyticsButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1.81"
        android:text="Purchase Analytics"
        android:backgroundTint="@color/colorAccent"/>

</LinearLayout>
